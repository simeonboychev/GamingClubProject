@model GamingProject.Areas.Moderator.Models.CreateSessionViewModel

@{
    ViewData["Title"] = "CreateSession";
}

<h1>CreateSession</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (Model.AllDevices.Count != 0)
        {

            <form asp-action="CreateSession">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden="hidden" asp-for="UserID" value="@Model.UserID">
                <select id="myList" asp-for="SelectedDevice" onchange="Test()">
                    <option value="Select ingredient" disabled="disabled" selected="selected"></option>
                    @foreach (var item in Model.AllDevices)
                    {
                        <option  value="@item.Value" >Name:@item.Value || Type:@item.Text </option>
                    }
                </select>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        }
        else
        {
            <h3>
                No available devices atm
            </h3>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

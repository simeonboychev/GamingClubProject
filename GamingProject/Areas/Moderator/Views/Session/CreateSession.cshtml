@model GamingProject.Areas.Moderator.Models.CreateSessionViewModel

@{
    ViewData["Title"] = "CreateSession";
}

<div class="container">
    <h1>CreateSession</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (Model.AllDevices.Count != 0)
            {
                <form asp-action="CreateSession">
                    <p>Select a device</p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden="hidden" asp-for="UserID" value="@Model.UserID">
                    <select id="myList" asp-for="SelectedDevice">
                        @foreach (var item in Model.AllDevices)
                        {
                            <option value="@item.Value">Name:@item.Value || Type:@item.Text </option>
                        }
                    </select>
                    <div class="form-group">
                        <input style="margin-top:15px" type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            }
            else
            {
                <h3>
                    No available devices atm
                </h3>
            }
        </div>
    </div>
</div>
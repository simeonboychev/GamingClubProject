@model GamingProject.Areas.Admin.Models.CreateDeviceViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<h5 style="color:red" id="resultDeviceName">
</h5>
<h5 style="color:green" id="successfullResult"></h5>
<div class="row">
    <div class="col-md-4">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Device Type</p>
                <select id="deviceT" name="deviceTypes">
                    <option value="PC">PC</option>
                    <option value="PlayStation4">PlayStation4</option>
                    <option value="Simulator">Simulator</option>
                </select>
            </div>
            <div class="form-group">
                <p>Device Name</p>
                @*<label asp-for="DeviceName" class="control-label"></label>*@
                <input oninput="clearH5()" asp-for="DeviceName" id="deviceName" class="form-control" />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  id="deviceBTN" type="submit" value="Create" class="btn btn-primary" />
            </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    function clearH5() {
            console.log("wlizam");
            $('#resultDeviceName').text("");
        }
</script>
@section scripts{ 
    
    <script>
        $('#deviceBTN').on('click', () => {
            let deviceName = $('#deviceName').val();
            let deviceType = $('#deviceT').val();

            $.ajax({

                url: "Create",
                method: "Post",
                data: {
                    DeviceName: deviceName,
                    Type: deviceType
                },
                success: function (response) {
                    console.log(response);
                    if (!response) {
                      
                        $('#resultDeviceName').text("This device name already exists!");
                        $('#successfullResult').text("");
                    }
                    else {
                        $('#successfullResult').text("Successfully created device!");
                        $('#deviceName').val("");
                        document.getElementById('deviceT').selectedIndex = 0;
                    }
                }
            })
        })
    </script>

}
